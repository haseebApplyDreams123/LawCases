@page "{id:int}"
@model LawCases.Pages.Clients.DetailModel
@{
    ViewData["Title"] = "Client Details";
}

<link rel="stylesheet" href="~/css/global.css" />
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Client.Image))
            {
                <div class="text-center mb-4">
                    <img src="@Model.Client.Image" alt="Client Image" class="img-thumbnail" style="max-width: 200px;" />
                </div>
            }

            <div class="card mb-4">
                <div class="card-header">
                    <h5>Personal Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.Client.FirstName @Model.Client.LastName</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.Client.DateOfBirth.ToShortDateString()</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Client.Gender</dd>

                        <dt class="col-sm-4">Marital Status</dt>
                        <dd class="col-sm-8">@Model.Client.MaritalStatus</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Contact Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Client.Email</dd>

                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.Client.Username</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Model.Client.PhoneNumber</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Client.Address</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>System Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Created On</dt>
                        <dd class="col-sm-8">@Model.Client.CreatedOn.Value.ToString("g")</dd>

                        @if (Model.Client.ModifiedOn != null)
                        {
                            <dt class="col-sm-4">Last Modified</dt>
                            <dd class="col-sm-8">@Model.Client.ModifiedOn.Value.ToString("g")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="./Edit" asp-route-id="@Model.Client.Id" class="btn btn-primary">Edit</a>
        <a asp-page="/clients/list" class="btn btn-secondary">Back to List</a>
    </div>
</div>